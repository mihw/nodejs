{
  "name": "vibe-kanban",
  "version": "1.0.0",
  "description": "Kanban board application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.17.0",
    "@babel/preset-env": "^7.16.0",
    "@vue/test-utils": "^1.3.0",
    "babel-jest": "^27.5.1",
    "jest": "^27.5.1",
    "vue": "^2.7.14",
    "vue-jest": "^3.0.7",
    "vuex": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": ["js", "json", "vue"],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.spec.js",
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!src/router/**"
    ]
  }
}